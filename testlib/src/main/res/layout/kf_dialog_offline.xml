<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F4F6F7">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="match_parent"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/bg_back"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/leavemsg"
                android:textColor="@color/all_black"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/inviteLeavemsgTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="16sp"
            tools:text="哈哈哈" />

        <LinearLayout
            android:id="@+id/offline_ll_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id_et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/kf_offlinedialog_et_bg"
                android:gravity="top"
                android:hint="@string/pleaseleavemsg"
                android:maxLines="6"
                android:minLines="6"
                android:padding="6dp" />

            <LinearLayout
                android:id="@+id/offline_ll_custom_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/id_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="#00b38a"
                android:text="@string/submit_leavemsg"
                android:textColor="@color/all_white"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
